<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".Result_detail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gridround"
            android:stretchColumns="1,3">
            <TableRow>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/gridback"
                    android:gravity="center"
                    android:paddingTop="7dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="7dp"
                    android:text="논문명"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gridback"
                    android:paddingTop="7dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="7dp"
                    android:layout_span="3"
                    android:text="논문명 쓰는곳"
                    android:textSize="20dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/abstract_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gridback"
                    android:gravity="center"
                    android:paddingTop="7dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="7dp"
                    android:text="구분"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/abstracttxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gridback"
                    android:paddingTop="7dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="7dp"
                    android:text="구분 쓰기"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/p_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gridback"
                    android:gravity="center"
                    android:paddingTop="7dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="7dp"
                    android:text="개제연도"
                    android:textSize="20dp"/>

                <TextView
                    android:id="@+id/p_date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gridback"
                    android:paddingTop="7dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="7dp"
                    android:text="연도 쓰기"
                    android:singleLine="true"
                    android:textSize="20dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/academic_journal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/gridback"
                    android:gravity="center"
                    android:paddingTop="7dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="7dp"
                    android:text="개제지"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/academic_journal_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gridback"
                    android:paddingTop="7dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="7dp"
                    android:layout_span="3"
                    android:text="게재지 쓰는곳"
                    android:textSize="20dp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/writers"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/gridback"
                    android:gravity="center"
                    android:paddingTop="7dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="7dp"
                    android:text="저자명"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/writers_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gridback"
                    android:paddingTop="7dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:paddingBottom="7dp"
                    android:layout_span="3"
                    android:text="저자명 쓰는곳"
                    android:textSize="20dp"/>
            </TableRow>

        </TableLayout>


    </RelativeLayout>

</ScrollView>